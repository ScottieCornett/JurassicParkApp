<% layout('layouts/boilerplate') %>
<div class="contact-container">
  <div class="contact-body">
    <div class="contact-title">Contact Us</div>
    <form action="/contact" method="POST">
      <div class="contact-details">
        <div class="contact-input">
          <label for="contact-first-name" class="details">First Name</label>
          <input
            type="text"
            id="contact-full-name"
            placeholder="Enter your first name"
            name="contact[firstName]"
            required
          />
        </div>
        <div class="contact-input">
          <label for="contact-last-name" class="details">Last Name</label>
          <input
            type="text"
            id="contact-last-name"
            placeholder="Enter your last name"
            name="contact[lastName]"
            required
          />
        </div>
        <div class="contact-input">
          <label for="contact-email" class="details">Email</label>
          <input
            type="text"
            id="contact-email"
            placeholder="Enter your email"
            name="contact[email]"
            required
          />
        </div>
        <div class="contact-input">
          <label for="contact-address" class="details">Address</label>
          <input
            type="text"
            id="contact-address"
            placeholder="Enter your address"
            name="contact[address]"
            required
          />
        </div>
        <div class="contact-input">
          <label for="contact-city" class="details">City</label>
          <input
            type="text"
            id="contact-city"
            placeholder="Enter your city"
            name="contact[city]"
            required
          />
        </div>
        <div class="contact-input">
          <label for="contact-state" class="details">State</label>
          <input
            type="text"
            id="contact-state"
            placeholder="Enter your state"
            name="contact[state]"
            required
          />
        </div>
        <div class="contact-input">
          <label for="contact-zipcode" class="details">Zip Code</label>
          <input
            type="text"
            id="contact-zipcode"
            placeholder="Enter your zip code"
            name="contact[zipCode]"
            required
          />
        </div>
        <div class="contact-input">
          <label for="contact-phone" class="details">Phone Number</label>
          <input
            type="text"
            id="contact-phone"
            placeholder="(Optional) Enter your phone number"
            name="contact[telephoneNumber]"
          />
        </div>
      </div>
      <div class="contact-btn">
        <input type="submit" value="Submit" />
      </div>
    </form>
  </div>
</div>
