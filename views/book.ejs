<% layout('layouts/boilerplate') %>
<div class="booking-body">
  <div class="panel pricing-table">
    <div class="pricing-plan">
      <img
        src="/imgs/logo2.svg"
        alt="darkened jurassic park logo"
        class="pricing-img basic-img"
      />
      <h2 class="pricing-header">Basic</h2>
      <ul class="pricing-features">
        <li class="pricing-features-item">
          Most affordable Jurassic Park experience
        </li>
        <li class="pricing-features-item">
          Does not include airfare, hotel, or meal tickets
        </li>
      </ul>
      <span class="pricing-price">$500/day</span>
      <a href="#/" class="pricing-button" id="basic-btn">Buy Now</a>
    </div>

    <div class="pricing-plan">
      <img
        src="/imgs/logo1.svg"
        alt="color jurassic park logo with lowered opacity"
        class="pricing-img silver-img"
      />
      <h2 class="pricing-header">Silver</h2>
      <ul class="pricing-features">
        <li class="pricing-features-item">
          A serious upgrade for serious adventurers
        </li>
        <li class="pricing-features-item">
          Includes airfare, hotel, and meal tickets
        </li>
      </ul>
      <span class="pricing-price">$1200/day</span>
      <a href="#/" class="pricing-button" id="silver-btn">Buy Now</a>
    </div>

    <div class="pricing-plan">
      <img
        src="/imgs/logo1.svg"
        alt="full color jurassic park logo"
        class="pricing-img"
      />
      <h2 class="pricing-header">Gold</h2>
      <ul class="pricing-features">
        <li class="pricing-features-item">
          The 'Greatest Adventure in History' - Enough said
        </li>
        <li class="pricing-features-item">
          Private suite, line passes and first class airfare
        </li>
      </ul>
      <span class="pricing-price">$5000/day</span>
      <a href="#/" class="pricing-button" id="gold-btn">Buy Now</a>
    </div>
  </div>
  <div class="modal hidden">
    <div class="modal-wrapper">
      <button class="close-modal">x</button>
      <h2>Purchase Tickets</h2>
      <div class="modal-section">
        <div class="modal-label">
          <label for="trip-length"
            >How long will your adventure be at Jurassic Park?</label
          >
        </div>
        <div class="modal-select">
          <select name="trip-length" id="trip-length">
            <option value="1">1 day</option>
            <option value="2">2 days</option>
            <option value="3">3 days</option>
            <option value="4">4 days</option>
            <option value="5">5 days</option>
            <option value="6">6 days</option>
            <option value="7">7 days</option>
          </select>
        </div>
      </div>
      <div class="modal-section">
        <div class="modal-label">
          <label for="tickets">How many guests are in your party?</label>
        </div>
        <div class="modal-select">
          <select name="tickets" id="tickets">
            <option value="1">1 guest</option>
            <option value="2">2 guests</option>
            <option value="3">3 guests</option>
            <option value="4">4 guests</option>
            <option value="5">5 guests</option>
            <option value="6">6 guests</option>
            <option value="7">7 guests</option>
            <option value="8">8 guests</option>
            <option value="9">9 guests</option>
          </select>
        </div>
      </div>
      <div><span>Total: $</span> <span id="total">0</span></div>
      <div class="modal-buttons">
        <a href="#" class="pricing-button-modal" id="modal-btn"
          >Calculate Cost</a
        >
        <a
          href="/thanks"
          class="pricing-button-modal is-featured"
          id="modal-btn"
          >Add To Cart</a
        >
      </div>
    </div>
  </div>
</div>
